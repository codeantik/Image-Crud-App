<%- include('layout/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit User (<%= user.name %> )</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/edit/<%= user._id %>" method="POST" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg"
                             placeholder="Enter name" value="<%= user.name %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="url">URL</label>
                            <input type="text" name="url" class="form-control form-control-lg"
                             placeholder="Enter url" value="<%= user.url %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="details">Details</label>
                            <textarea type="text" name="details" class="form-control form-control-lg"
                             placeholder="Enter details" required><%= user.details %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" />
                            <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1" />
                        </div>
                        <input type="hidden" name="old_image" value="<%= user.image %>">
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update User" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer.ejs') %> 
